<%- include('header') %>
<h2>
    Editar Vaga:
    <a href="/admin/vagas">Vagas</a>
</h2>

<div>
    <form method="POST">
        <label for="titulo">Titulo:</label>
        <input
            type="text"
            name="titulo"
            id="titulo"
            value="<%= vaga.titulo %>"
        />

        <label for="descricao">Descricao:</label>
        <textarea id="descricao" name="descricao" rows="5">
            <%= vaga.descricao %>
        </textarea>

        <label for="categoria">Categoria:</label>
        <select id="categoria" name="categoria" value="<% vaga.categoria %>">
            <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.id %>" <% if (categoria.id == vaga.categoria) {%>selected<% } %>
                ><%= categoria.categoria %></option
            >
            <% }) %>
        </select>

        <button>Salvar vaga</button>
    </form>
</div>

<%- include('footer') %>
